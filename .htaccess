RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 外部への fetch を許可（GAS／関連ドメイン）
<IfModule mod_headers.c>
  Header always set Content-Security-Policy "default-src 'self'; connect-src 'self' https://script.google.com https://script.googleusercontent.com https://ssl.gstatic.com; img-src * data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
</IfModule>

<FilesMatch ".*">
  Header set X-Robots-Tag "noindex, nofollow"
</FilesMatch>

# HTMLは都度更新
<FilesMatch "\.html?$">
  Header set Cache-Control "no-store, must-revalidate"
</FilesMatch>
# アセットは長期キャッシュ（ファイル名にバージョンを付ける前提）
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|webp)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>
# ドットファイル遮断
<FilesMatch "^\.">
  Require all denied
</FilesMatch>
